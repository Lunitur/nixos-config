# Mod4 = Win key
set $mod Mod4
set $alt Mod1

# bindsym $mod+Shift+m exec wlr-randr --output DSI-1 --toggle
bindsym $mod+Shift+m exec wlr-randr --output DSI-1 --mode 1200x1920 --transform 270
bindsym $mod+$alt+m exec wlr-randr --output DSI-1 --mode 1200x1920 --transform 90
bindsym $mod+w exec looking-glass-client -f /dev/kvmfr0

bindsym $mod+Shift+t xfce4-taskmanager

bindsym $mod+Shift+l move workspace to output right
bindsym $mod+Shift+h move workspace to output left
